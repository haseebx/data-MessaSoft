{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "es5",
    "lib": ["dom", "es6", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/mocks/*": ["./src/mocks/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/screens/*": ["./src/screens/*"],
      "@/themed/*": ["./src/themed/*"],
      "@/services/*": ["./src/services/*"],
      "@/store/*": ["./src/store/*"],
      "@/store": ["./src/store"],
      "@/styles/*": ["./src/styles/*"],
      "@/navigation/*": ["./src/navigation/*"],
      "@/navigation": ["./src/navigation"],
      "@/theme/*": ["./src/theme/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/utils": ["./src/utils"],
      "@/validations/*": ["./src/validations/*"],
      "@/validations": ["./src/validations"],
      "@/test-utils": ["./src/utils/test-utils"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "jest-setup.ts",
    "App.test.tsx",
    "jest.config.js",
    "jest.config.js",
    "src/navigation/RootNavigator/RootNavigator.tss"
  ],
  "exclude": ["node_modules", "webpack", "jest", "cypress"]
}
